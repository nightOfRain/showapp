<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <SurfaceView
                android:id="@+id/arc_hf_video_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
            </SurfaceView>

            <LinearLayout
                android:layout_width="180px"
                android:layout_height="60px"
                android:layout_gravity="top|right"
                android:layout_marginTop="60px"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_recorder_redpoint" />

                <TextView
                    android:id="@+id/arc_hf_video_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130px"
                android:layout_gravity="bottom"
                android:layout_marginLeft="44px"
                android:layout_marginTop="32px"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/arc_hf_img_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="76px"
                    android:background="@drawable/layout_recorder_stop_noselect"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/arc_hf_video_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="76px"
                    android:background="@drawable/layout_recorder_play_noselect"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/save_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_recorder_save_noselect"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>